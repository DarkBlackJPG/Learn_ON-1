        <script type="text/javascript">
            var w=window.innerWidth;
            var h=window.innerHeight;
            var nw=w;
            var nh=h-10;
            document.getElementById("Hhh").style.height=nh+"px";
            document.getElementById("Hhh").style.width=nw+"px";
            function resize(){
                var w=window.innerWidth;
                var h=window.innerHeight;
                var nw=w;
                var nh=h-10;
                document.getElementById("Hhh").style.height=nh+"px";
                document.getElementById("Hhh").style.width=nw+"px";
            }

        </script>
